<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#cce3fe"
                android:endColor="#c5defe"
                android:angle="0"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#d3e6fe" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Button corner radius -->
        </shape>
    </item>

</layer-list>
